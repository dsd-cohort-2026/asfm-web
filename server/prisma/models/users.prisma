model User {
  id                String              @id @default(uuid())
  first_name         String
  last_name         String
  email             String              @unique
  phone             String
  address           String
  role              Role                @default(USER)
  created_at        DateTime            @default(now())
  
  modified_animals   Animal[]
  user_assignments  AnimalAssignments[] @relation("User")
  staff_assignments AnimalAssignments[] @relation("Staff")
  medical_logs      MedicalLogs[]
}