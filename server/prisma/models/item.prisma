model Item {
  id          String        @id @default(uuid())
  category    Item_Category
  name        String
  brand       String
  description String
  species     Species
  unit        String
  is_active   Boolean
  created_at  DateTime      @default(now())

  // Relationship fields
  medication             Medication[]
  food                   Food[]
  crate                  Crate[]
  inventory              Inventory[]
  inventory_transactions InventoryTransaction[]
}
