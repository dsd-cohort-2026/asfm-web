model User {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  first_name String
  last_name  String
  email      String   @unique
  phone      String
  address    String
  role       Role     @default(USER)
  created_at DateTime @default(now())

  // Relationship fields
  user_assignments             AnimalAssignment[]     @relation("User")
  staff_assignments            AnimalAssignment[]     @relation("Staff")
  medical_logs                 MedicalLog[]
  user_inventory_transactions  InventoryTransaction[] @relation("User")
  staff_inventory_transactions InventoryTransaction[] @relation("Staff")
  staff_animal_changes         AnimalModification[]
}
