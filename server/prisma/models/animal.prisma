model Animal {
  id            String        @id @default(uuid())
  name          String
  chip_id       Int           @unique
  created_at    DateTime      @default(now())
  dob           DateTime
  sex           Sex
  species       Species
  foster_status Animal_Status
  kennel_id     Int
  altered       Boolean
  weight        Float
  last_modified DateTime      @updatedAt
  picture       String

  // relationship fields
  modified_by        AnimalModification[]
  animal_assignments AnimalAssignment[]
  medical_logs       MedicalLog[]
}
