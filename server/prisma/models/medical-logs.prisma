model MedicalLogs {
  id               String           @id @default(uuid())

  // FK fields
  foster_user_id   String
  animal_id        String
  assignment_id    String
  medicine_id      String

  // Relation fields
  foster_user      User             @relation(fields: [foster_user_id], references: [id])
  animal           Animal           @relation(fields: [animal_id], references: [id])
  assignment       AnimalAssignment @relation(fields: [assignment_id], references: [id])
  medicine         Medication       @relation(fields: [medicine_id], references: [id])

  logged_at        DateTime         @default(now())
  category         Log_Type
  general_notes    String?
  behavior_notes   String?
  qty_administered Float?
  dose             String?
  administered_at  DateTime?
  prescription     String?
  documents        String?
}
